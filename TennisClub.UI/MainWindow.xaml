<Window x:Class="TennisClub.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TennisClub.UI"
        mc:Ignorable="d"
        Title="TennisClub" Height="463" Width="800">
    <DataGrid x:Name="RoleData" AutoGenerateColumns="False" Grid.ColumnSpan="2" CanUserDeleteRows="False" Margin="10,10,10,60">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Id" Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
            <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
